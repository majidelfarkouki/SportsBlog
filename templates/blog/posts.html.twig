{% extends 'base.html.twig' %} {% block title %}Articles | SportsBlog{% endblock %} 
{% block body %}
<div class="col-lg-12 mg-t-20 mg-lg-t-0">
   <div class="card">
      <div class="card-header">
         <h5 class="large-card-title">
         Articles</h>       
      </div>
      <!-- card-header -->  
      <div class="box">
         <div class="container">
            <div class="row">
               <!-- Blog Post -->
               {% for post in posts %}
               <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                  <div class="card-deck">
                     <div class="card">
                        <div class="card-body">
                           <h3 class="card-title">{{ post.title }}</h3>
                           <p class="card-text">{{ post.description|length > 50 ? post.description|striptags|slice(0, 50) ~ '...' : post.description | raw}}</p>
                           <a href="/post/{{ post.urlAlias }}" class="btn btn-sm btn-primary">Read More &rarr;</a>
                        </div>
                        <div class="card-footer">
                           <small class="text-muted">Posted on {{ post.published.date | date('d F, Y') }}</small>
                        </div>
                     </div>
                  </div>
                  <br>
               </div>
               {% else %}
               <div class="alert alert-info" role="alert">
                  There is no article !
               </div>
               {% endfor %}
            </div>
         </div>
      </div>
   </div>
</div>
{% endblock %}
{% block javascripts %}
{{ parent() }}
<script>
   $(document).ready(function () {
              $("[id*=1]").removeClass('active');
              $("[id*=2]").addClass('active');
                  
          });
</script>
{% endblock %}