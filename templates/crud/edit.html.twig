{% extends "base.html.twig" %}
{% block title %}Edit post | SportsBlog{% endblock %}
{% block body %}
<div class="col-lg-12 mg-t-20 mg-lg-t-0">
   <div class="section-wrapper">
      {{ form_start(form) }}
      <label class="section-title">Edit article : {{ post.title }}</label>
      <!-- <p class="mg-b-20 mg-sm-b-40">A basic form where labels are aligned in right.</p> -->
      <div class="form-layout form-layout-5">
         <div class="form-group">
            <label for="exampleInputTitle">Title</label>
            {{ form_widget(form.title, {'attr': {'class': 'form-control', 'id': 'exampleInputTitle'}}) }}
         </div>
         <div class="form-group">
            <label for="exampleInputContent">Content (in HTML)</label>
            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'id': 'exampleInputContent'}}) }}
         </div>
         <div class="row mg-t-30" align="center">
            <div class="col-sm-8 mg-l-auto">
               <div class="form-layout-footer">
                  {{ form_widget(form.save, {'attr': {'class': 'btn btn-sm btn-success bd-0','placeholder': "Submit Form"}} ) }}
                  {{ form_widget(form.discard, {'attr': {'class': 'btn btn-sm btn-danger bd-0'}}) }}
               </div>
               <!-- form-layout-footer -->
            </div>
            <!-- col-8 -->
         </div>
      </div>
      <!-- form-layout -->
      {{ form_end(form) }}
   </div>
   <!-- section-wrapper -->
</div>
<!-- col-6 -->
<!-- Modal -->
<div class="modal" id="validationModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
   <div class="modal-dialog" role="document">
      <div class="modal-content">
         <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Quit without saving?</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
         </div>
         <div class="modal-body">
            Are you sure to quit without save changes?
         </div>
         <div class="modal-footer">                    
            <a class="btn btn-sm btn-primary" href="/post/{{ post.urlAlias }}">Yes quit without save</a>
            <button type="button" class="btn btn-sm btn-outline-danger" data-dismiss="modal">Cancel</button>
         </div>
      </div>
   </div>
</div>
{% endblock %}
{% block javascripts %}
{{ parent() }}
<script>
   $(document).ready(function () {
              $("[id*=1]").removeClass('active');
              $("[id*=2]").removeClass('active');
          });
</script>
{% endblock %}